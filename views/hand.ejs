<h1>
    Hand <%= (theGame.pastHands.length + 1) %> |
    <%= `${theGame.player1.name} ${theGame.player1.points}:${theGame.player2.points} ${theGame.player2.name}` %>
</h1>
<div>
    <div class="container">
        <h1>Current Hand:</h1>
        <% 
            var currentHand = theGame.nextHand();
            for(var player in currentHand) { 
        %>
            <div class="card">
                <%= currentHand[player].toString() %>
            </div>
        <% } %>
        winner: <%= theGame.playerOnTurn.name %>
    </div>

    <div class="container">
        <h1><%= theGame.player1.name %> Cards:</h1>
        <% theGame.player1.getCards().forEach(function(card){ %>
            <div class="card">
                <%= card.toString() %>
            </div>
        <% }); %>
    </div>

    <div class="container">
        <h1><%= theGame.player2.name %> Cards:</h1>
        <% theGame.player2.getCards().forEach(function(card){ %>
            <div class="card">
                <%= card.toString() %>
            </div>
        <% }); %>
    </div>

    <div class="container">
        <h1>Game Suit:</h1>
        <div class="card">
            <%= theGame.gameSuit.toString() %>
        </div>
    </div>

    <div class="container">
        <h1>Cards in deck:</h1>
        <% theGame.deck.getCards().forEach(function(card){ %>
            <div class="card">
                <%= card.toString() %>
            </div>
        <% }); %>
    </div>
</div>
<hr>